<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F2E69E" />

    <!-- Corner radius -->
    <corners android:radius="40dp" />

    <!-- Border (optional) -->
    <stroke android:width="2dp" android:color="#D1C283" />

    <!-- Padding (optional) -->
    <padding android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>