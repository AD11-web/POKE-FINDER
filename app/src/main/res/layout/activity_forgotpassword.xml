<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".activity_forgotpassword">

    <ImageView
        android:id="@+id/bgimg"
        android:layout_width="255dp"
        android:layout_height="264dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="166dp"
        app:srcCompat="@drawable/poke6" />

    <TextView
        android:id="@+id/resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Forgot Password?"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enterusername"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittextforgotpass_background"
        android:hint="Enter Username"
        android:inputType="text"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#483F3A"
        android:textColorHint="#483F3A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/edittextforgotpass_background"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#483F3A"
        android:textColorHint="#483F3A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/edittextforgotpass_background"
        android:hint="Re-Enter New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#483F3A"
        android:textColorHint="#483F3A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="#483F3A"
        android:text="Reset !"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
